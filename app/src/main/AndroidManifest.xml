
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meterreader">

    <queries>
        <package android:name="com.symbol.datawedge" />
    </queries>

    <uses-permission android:name="com.symbol.datawedge.permission.contentprovider" />

    <application
        android:allowBackup="true"
        android:label="Zebra Meter Reader"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <activity android:name=".BarcodeActivity" android:exported="true" android:launchMode="singleTop"/>
        <activity android:name=".OcrActivity" android:exported="true" android:launchMode="singleTop"/>
        <activity android:name=".MainActivity" android:exported="true" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
